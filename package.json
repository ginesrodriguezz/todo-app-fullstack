{
    "name": "todo-app-fullstack",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "client",
        "server"
    ],
    "scripts": {
        "dev": "concurrently \"npm run dev --workspace=server\" \"npm run dev --workspace=client\"",
        "build": "npm run build --workspace=client && npm run build --workspace=server",
        "postinstall": "npm run db:generate --workspace=server && npm run build --workspace=server"
    },
    "devDependencies": {
        "concurrently": "^8.2.2",
        "typescript": "^5.3.3"
    },
    "dependencies": {
        "express": "^4.18.2"
    }
}